<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.darwino</groupId>
		<artifactId>parent-dwo-native</artifactId>
		<version>2.0.0-SNAPSHOT</version>
	</parent>
	
	<artifactId>dwo-native-sqlite</artifactId>
	<packaging>pom</packaging>
	
	<name>SQLite Native Libraries</name>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-artifacts</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<!-- iOS artifacts -->
								<artifact>
									<file>${project.basedir}/ios/Jsonstore/ios/libJsonstoreArm64.a</file>
									<type>a</type>
									<classifier>ios-arm64</classifier>
								</artifact>
								<artifact>
									<file>${project.basedir}/ios/Jsonstore/ios/libJsonstoreArmv7.a</file>
									<type>a</type>
									<classifier>ios-armv7</classifier>
								</artifact>
								<artifact>
									<file>${project.basedir}/ios/Jsonstore/ios/libJsonstoreArmv7s.a</file>
									<type>a</type>
									<classifier>ios-armv7s</classifier>
								</artifact>
								<artifact>
									<file>${project.basedir}/ios/Jsonstore/ios/libJsonstorei386.a</file>
									<type>a</type>
									<classifier>ios-i386</classifier>
								</artifact>
								<artifact>
									<file>${project.basedir}/ios/Jsonstore/ios/libJsonstoreUniversal.a</file>
									<type>a</type>
									<classifier>ios-universal</classifier>
								</artifact>
								
								<!-- macOS artifacts -->
								<artifact>
									<file>${project.basedir}/ios/Jsonstore/mac/libJsonstoreMac.dylib</file>
									<type>dylib</type>
									<classifier>mac</classifier>
								</artifact>
								
								<!-- Android artifacts -->
								<artifact>
									<file>${project.basedir}/android/libs/armeabi/libjsonstore-sqlite.so</file>
									<type>so</type>
									<classifier>android-armeabi</classifier>
								</artifact>
								<artifact>
									<file>${project.basedir}/android/libs/armeabi-v7a/libjsonstore-sqlite.so</file>
									<type>so</type>
									<classifier>android-armeabi-v7a</classifier>
								</artifact>
								<artifact>
									<file>${project.basedir}/android/libs/mips/libjsonstore-sqlite.so</file>
									<type>so</type>
									<classifier>android-mips</classifier>
								</artifact>
								<artifact>
									<file>${project.basedir}/android/libs/x86/libjsonstore-sqlite.so</file>
									<type>so</type>
									<classifier>android-x86</classifier>
								</artifact>
								
								<!-- Windows artifacts -->
								<artifact>
									<file>${project.basedir}/windows/dlls/sqlite-win32-x86.dll</file>
									<type>dll</type>
									<classifier>windows-x86</classifier>
								</artifact>
								<artifact>
									<file>${project.basedir}/windows/dlls/sqlite-win32-x64.dll</file>
									<type>dll</type>
									<classifier>windows-x64</classifier>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.7</version>
				<configuration>
					<skip>false</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<!-- Build the iOS libraries using the Xcode Project -->
		<profile>
			<id>native-ios</id>
			
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.4.0</version>
						<executions>
							<execution>
								<id>clean-ios</id>
								<phase>clean</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>make</executable>
									<arguments>
										<argument>clean</argument>
									</arguments>
									<workingDirectory>${project.basedir}/ios/Jsonstore</workingDirectory>
								</configuration>
							</execution>
							<execution>
								<id>build-ios</id>
								<phase>compile</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>make</executable>
									<workingDirectory>${project.basedir}/ios/Jsonstore</workingDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		
		<!-- Build the macOS libraries using the Xcode Project -->
		<!-- This re-uses the iOS project -->
		<profile>
			<id>native-mac</id>
			
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.4.0</version>
						<executions>
							<execution>
								<id>clean-mac</id>
								<phase>clean</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>make</executable>
									<arguments>
										<argument>clean-mac</argument>
									</arguments>
									<workingDirectory>${project.basedir}/ios/Jsonstore</workingDirectory>
								</configuration>
							</execution>
							<execution>
								<id>build-mac</id>
								<phase>compile</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>make</executable>
									<arguments>
										<argument>libJsonstoreMac.dylib</argument>
									</arguments>
									<workingDirectory>${project.basedir}/ios/Jsonstore</workingDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		
		<!-- Build the Android libraries using the NDK Project -->
		<profile>
			<id>native-android</id>
			
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.4.0</version>
						<executions>
							<execution>
								<id>clean-android</id>
								<phase>clean</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>${android-ndk}/ndk-build</executable>
									<arguments>
										<argument>clean</argument>
									</arguments>
									<workingDirectory>${project.basedir}/android</workingDirectory>
								</configuration>
							</execution>
							<execution>
								<id>build-android</id>
								<phase>compile</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>${android-ndk}/ndk-build</executable>
									<workingDirectory>${project.basedir}/android</workingDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		
		<!-- Build the x86 Windows libraries using the Visual Studio Project -->
		<profile>
			<id>native-windows-x86</id>
			
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.4.0</version>
						<executions>
							<execution>
								<id>clean-windows-x86</id>
								<phase>clean</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>msbuild</executable>
									<arguments>
										<argument>/Target:Clean</argument>
										<argument>/p:Platform=Win32</argument>
									</arguments>
									<workingDirectory>${project.basedir}/windows</workingDirectory>
								</configuration>
							</execution>
							<execution>
								<id>build-windows-x86</id>
								<phase>compile</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>msbuild</executable>
									<arguments>
										<argument>/p:Platform=Win32</argument>
									</arguments>
									<workingDirectory>${project.basedir}/windows</workingDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>
					
					<!-- Copy the newly-built file to the repo-run directory, to match the other platforms -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-resources-plugin</artifactId>
						<version>3.0.1</version>
						<executions>
							<execution>
								<id>copy-windows-x86</id>
								<phase>process-classes</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<resources>
										<resource>
											<directory>${project.basedir}/windows/Win32/Debug</directory>
											<includes>
												<include>sqlite-win32-x86.dll</include>
											</includes>
										</resource>
									</resources>
									<outputDirectory>${project.basedir}/windows/dlls</outputDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		
		<!-- Build the x64 Windows libraries using the Visual Studio Project -->
		<profile>
			<id>native-windows-x64</id>
			
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.4.0</version>
						<executions>
							<execution>
								<id>clean-windows-x64</id>
								<phase>clean</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>msbuild</executable>
									<arguments>
										<argument>/Target:Clean</argument>
										<argument>/p:Platform=x64</argument>
									</arguments>
									<workingDirectory>${project.basedir}/windows</workingDirectory>
								</configuration>
							</execution>
							<execution>
								<id>build-windows-x64</id>
								<phase>compile</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>msbuild</executable>
									<arguments>
										<argument>/p:Platform=x64</argument>
									</arguments>
									<workingDirectory>${project.basedir}/windows</workingDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>
					
					<!-- Copy the newly-built file to the repo-run directory, to match the other platforms -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-resources-plugin</artifactId>
						<version>3.0.1</version>
						<executions>
							<execution>
								<id>copy-windows-x64</id>
								<phase>process-classes</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<resources>
										<resource>
											<directory>${project.basedir}/windows/x64/Debug</directory>
											<includes>
												<include>sqlite-win32-x64.dll</include>
											</includes>
										</resource>
									</resources>
									<outputDirectory>${project.basedir}/windows/dlls</outputDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
